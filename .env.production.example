# Production Environment Configuration for PeBloq

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=PeBloq

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://pengubook:your_secure_password@localhost:5432/pengubook
POSTGRES_DB=pengubook
POSTGRES_USER=pengubook
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Authentication & Security
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_super_secure_nextauth_secret_at_least_32_chars
JWT_SECRET=your_jwt_secret_at_least_32_chars

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Twitter/X OAuth
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Abstract Global Wallet Configuration
NEXT_PUBLIC_ABSTRACT_TESTNET_RPC=https://api.testnet.abs.xyz
NEXT_PUBLIC_ABSTRACT_CHAIN_ID=11124
ABSTRACT_RPC_URL=https://api.testnet.abs.xyz
ABSTRACT_CHAIN_ID=11124
ABSTRACT_EXPLORER_URL=https://explorer.testnet.abs.xyz

# Blockchain Configuration
USDC_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
PENGU_TOKEN_ADDRESS=0x0987654321098765432109876543210987654321
PUDGY_PENGUINS_CONTRACT=0xBd3531dA5CF5857e7CfAA92426877b022e612cf8
COMMUNITY_NFTS_CONTRACT=0x1234567890123456789012345678901234567890

# Admin Configuration
NEXT_PUBLIC_ADMIN_WALLET_ADDRESS=0x_your_admin_wallet_address

# File Upload & CDN (optional)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Monitoring & Analytics (optional)
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@your-domain.com

# WebSocket Configuration (for real-time features)
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_FRAME_OPTIONS=true