# ===================================
# DATABASE (Shared across all services)
# ===================================
DATABASE_URL="postgresql://user:password@localhost:5432/pebloq?pgbouncer=true&connection_limit=10"
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/pebloq"

# ===================================
# REDIS (Caching & Rate Limiting)
# ===================================
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# ===================================
# CLOUDINARY (File Storage)
# ===================================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_UPLOAD_PRESET="pebloq_direct_upload"

# ===================================
# AWS (Content Moderation)
# ===================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# ===================================
# ABSTRACT GLOBAL WALLET (AGW)
# ===================================
NEXT_PUBLIC_ABSTRACT_TESTNET_RPC_URL="https://api.testnet.abs.xyz"
NEXT_PUBLIC_ABSTRACT_MAINNET_RPC_URL="https://api.mainnet.abs.xyz"
NEXT_PUBLIC_ADMIN_WALLET_ADDRESS="0xae2cf7cC881fFDfc75F1Fc425a01E8ae3229FA02"

# ===================================
# NEXTAUTH (OAuth)
# ===================================
NEXTAUTH_SECRET="your-secret-key-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# ===================================
# SERVICE URLs (Local Development)
# ===================================
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_SOCKET_URL="http://localhost:4001"
NEXT_PUBLIC_WEB_URL="http://localhost:3000"

# API Service (for inter-service communication)
API_URL="http://localhost:4000"
SOCKET_URL="http://localhost:4001"

# ===================================
# SECURITY
# ===================================
JWT_SECRET="your-jwt-secret-min-32-chars"
ENCRYPTION_KEY="your-encryption-key-32-bytes"

# ===================================
# GIPHY (Optional)
# ===================================
GIPHY_API_KEY="your-giphy-api-key"

# ===================================
# WORKER SERVICE
# ===================================
REDIS_URL="redis://localhost:6379"
WORKER_CONCURRENCY="5"

# ===================================
# NODE ENVIRONMENT
# ===================================
NODE_ENV="development"
