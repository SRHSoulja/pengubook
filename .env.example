# PenguBook Environment Configuration

# Database
DATABASE_URL="file:./dev.db"

# Abstract Global Wallet RPC Configuration
# For token-gating functionality, you need to configure RPC endpoints

# Primary RPC URL (will be used first)
ABSTRACT_RPC_URL="https://api.mainnet.abs.xyz"

# Network-specific RPC URLs (fallbacks)
ABSTRACT_MAINNET_RPC="https://api.mainnet.abs.xyz"

# Alternative RPC providers for redundancy
# You can add multiple providers separated by commas
# BACKUP_RPC_URLS="https://rpc1.abstract.xyz,https://rpc2.abstract.xyz"

# Blockchain Network Configuration
BLOCKCHAIN_NETWORK="mainnet"

# GIPHY API (for GIF support)
NEXT_PUBLIC_GIPHY_API_KEY="your_giphy_api_key_here"

# NextJS Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security Keys (generate secure random strings)
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm"

# WebSocket Configuration
WEBSOCKET_PORT=3001

# Abstract Global Wallet specific settings
# Chain ID for token verification
ABSTRACT_MAINNET_CHAIN_ID=11124

# Development settings
NODE_ENV="production"
DEBUG_RPC="false"
LOG_LEVEL="info"